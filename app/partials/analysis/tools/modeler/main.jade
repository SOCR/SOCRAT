div(ng-controller="ModelerMainCtrl as mainArea")
  //h4 {{mainArea.title}}
  //h6 Distribution: {{mainArea.distribution.name}}
  //p {{mainArea.distribution.message}}
  //div.lead.bg-danger(ng-hide="mainArea.dataType == mainArea.DATA_TYPES.FLAT")
    | Modeling module only supports tabular data
  //div(ng-hide="mainArea.dataType != mainArea.DATA_TYPES.FLAT")

  //div.row-fluid
      


  div(ng-show='mainArea.distribution == "Normal"')
  
    .row
      .col-md-8
        h6 Normal Distribution Modeler &nbsp;
          span.glyphicon.glyphicon-question-sign(
          aria-hidden="true"
          uib-tooltip="This modeler plots a normal distribution."
          tooltip-placement="bottom"
          )
        modelerdir
      .col-md-4
          .row.form-inline
            label
              span.glyphicon.glyphicon-question-sign(
              aria-hidden="true"
              uib-tooltip="Mean of the dataset"
              tooltip-placement="left"
              ) &nbsp;
              | μ
              sub 1
              | &nbsp;
              input.form-control.input-sm.flat(
              string-to-number
              ng-model="mainArea.params.stats.mean"
              ng-click="mainArea.updateModelData()"
              ng-disabled="mainArea.deployed"
              type="number"
              step="1"
              name='NormalMean'
              )
            #NormalMean
          .row.form-inline
            label
              span.glyphicon.glyphicon-question-sign(
              aria-hidden="true"
              uib-tooltip="Standard Deviation of the sample"
              tooltip-placement="left"
              ) &nbsp;
              | σ
              sub 1
              | &nbsp;
              input.form-control.input-sm.flat(
              ng-model="mainArea.params.stats.standardDev"
              ng-click="mainArea.updateModelData()"
              ng-disabled="mainArea.deployed"
              type="number"
              step="1"
              name='NormalStDev'
              )
            #NormalStDev
          .row.form-inline
            label
              span.glyphicon.glyphicon-question-sign(
              aria-hidden="true"
              uib-tooltip="Variance of the sample"
              tooltip-placement="left"
              ) &nbsp;
              | variance
              input.form-control.input-sm.flat(
              ng-model="mainArea.params.stats.variance"
              ng-click="mainArea.updateModelData()"
              ng-disabled="mainArea.deployed"
              type="number"
              step="1"
              name='NormalVariance'
              )
            #NormalVariance

  div(ng-show='mainArea.distribution == "Cauchy"')
    .row
      .col-md-8
        h6 Cauchy Distribution Modeler &nbsp;
          span.glyphicon.glyphicon-question-sign(
          aria-hidden="true"
          uib-tooltip="This modeler plots a cauchy distribution."
          tooltip-placement="bottom"
          )
        modelerdir
      .col-md-4
          .row.form-inline
            label
              span.glyphicon.glyphicon-question-sign(
              aria-hidden="true"
              uib-tooltip="Mean of the dataset"
              tooltip-placement="left"
              ) &nbsp;
              | μ
              sub 1
              | &nbsp;
              input.form-control.input-sm.flat(
              string-to-number
              ng-model="mainArea.params.stats.mean"
              ng-click="mainArea.updateModelData()"
              ng-disabled="mainArea.deployed"
              type="number"
              step="1"
              name='CauchyMean'
              )
            #CauchyMean
          .row.form-inline
            label
              span.glyphicon.glyphicon-question-sign(
              aria-hidden="true"
              uib-tooltip="Location Parameter"
              tooltip-placement="left"
              ) &nbsp;
              | Location
              sub 1
              | &nbsp;
              input.form-control.input-sm.flat(
              string-to-number
              ng-model="mainArea.params.stats.location"
              ng-click="mainArea.updateModelData()"
              ng-disabled="mainArea.deployed"
              type="number"
              step="1"
              name='CauchyLocation'
              )
            #CauchyLocation
          .row.form-inline
            label
              span.glyphicon.glyphicon-question-sign(
              aria-hidden="true"
              uib-tooltip="Gamma of the sample"
              tooltip-placement="left"
              ) &nbsp;
              | γ
              sub 1
              | &nbsp;
              input.form-control.input-sm.flat(
              ng-model="mainArea.params.stats.gamma"
              ng-click="mainArea.updateModelData()"
              ng-disabled="mainArea.deployed"
              type="number"
              step="1"
              name='CauchyGamma'
              )
            #CauchyGamma
          

  div.row-fluid
    h4 Parameters
    ul
      li Mean: {{mainArea.stats.mean}}
      li Median: {{mainArea.stats.median}}
      li Variance: {{mainArea.stats.variance}}
      li Standard Deviation: {{mainArea.stats.standardDev}}



