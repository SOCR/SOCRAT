div(ng-controller="modelerMainCtrl as mainArea")
  div.lead.bg-danger(ng-hide="mainArea.dataType == mainArea.DATA_TYPES.FLAT")
    | Modeler only supports tabular data
  div(ng-hide="mainArea.dataType != mainArea.DATA_TYPES.FLAT")
  
    div(ng-show='mainArea.distribution == "Normal"')

      .row
        .col-md-8
          h6 Normal Distribution Modeler &nbsp;
            span.glyphicon.glyphicon-question-sign(
            aria-hidden="true"
            uib-tooltip="This modeler plots a normal distribution."
            tooltip-placement="bottom"
            )
          //modelerdir
        .col-md-4
            .row.form-inline
              label
                span.glyphicon.glyphicon-question-sign(
                aria-hidden="true"
                uib-tooltip="Mean of the dataset"
                tooltip-placement="left"
                ) &nbsp;
                | μ
                sub 1
                | &nbsp;
                input.form-control.input-sm.flat(
                string-to-number
                ng-model="mainArea.NormalMean"
                ng-click="mainArea.NormalSync()"
                ng-keypress ="mainArea.NormalPress($event)"
                ng-disabled="mainArea.deployed"
                type="number"
                step="0.001"
                name='NormalMean'
                )
              #NormalMean
            .row.form-inline
              label
                span.glyphicon.glyphicon-question-sign(
                aria-hidden="true"
                uib-tooltip="Variance of the sample"
                tooltip-placement="left"
                ) &nbsp;
                | variance
                input.form-control.input-sm.flat(
                ng-model="mainArea.NormalVariance"
                ng-click="mainArea.NormalSync()"
                ng-keypress ="mainArea.NormalPress($event)"
                ng-disabled="mainArea.deployed"
                type="number"
                step="0.01"
                name='NormalVariance'
                )
              #NormalVariance
    
